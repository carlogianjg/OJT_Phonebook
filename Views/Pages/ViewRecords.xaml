<Page x:Class="OJT_012022_Activity1.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OJT_012022_Activity1"
      mc:Ignorable="d" 
      Title="ViewRecords" Height="800" Width="500">

    <Grid Background="#34495E">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
          

        </Grid.RowDefinitions>

        <Label Content="Phonebook" Foreground="White" FontSize="50"  FontWeight="Light" Background="#2C3E50" Padding="20,10,0,0"/>


        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button x:Name="AddNewContact"
                Content="+" 
                Width="100" 
                Height="80" 
                Padding="0" 
                Foreground="White" 
                Background="#2C3E50" 
                BorderThickness="0" 
                FontSize="45" 
                FontWeight="ExtraBold" >
                
            </Button>
        </StackPanel>
                
        //display records here
        <DataGrid Name="dataGrid1" Margin="0,100,0,-700"/>
    </Grid>
    
    
</Page>
